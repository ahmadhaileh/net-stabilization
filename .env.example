# =============================================================================
# Net Stabilization - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Direct Miner Discovery (Default Mode)
# -----------------------------------------------------------------------------
# Enable automatic miner discovery on the network
MINER_DISCOVERY_ENABLED=true

# Network CIDR to scan for miners (e.g., 192.168.95.0/24)
MINER_NETWORK_CIDR=192.168.95.0/24

# Port for miner API (VNish/CGMiner API)
MINER_API_PORT=4028

# Timeout for discovery probes (seconds)
MINER_SCAN_TIMEOUT=1.0

# Timeout for API calls to miners (seconds)
MINER_API_TIMEOUT=5.0

# Run miner discovery on application startup
AUTO_DISCOVERY_ON_STARTUP=true

# Interval for periodic re-discovery (minutes)
DISCOVERY_INTERVAL_MINUTES=30

# -----------------------------------------------------------------------------
# AwesomeMiner Integration (Optional/Legacy)
# -----------------------------------------------------------------------------
# Enable AwesomeMiner integration (disabled by default)
AWESOME_MINER_ENABLED=false

# AwesomeMiner API host (use host.docker.internal in Docker)
AWESOME_MINER_HOST=localhost
AWESOME_MINER_PORT=17790

# API Key for AwesomeMiner (leave blank if not using API key auth)
AWESOME_MINER_API_KEY=

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Port for the web dashboard and API
HOST_PORT=8080

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Polling Configuration
# -----------------------------------------------------------------------------
# How often to poll miners for status (seconds)
# -----------------------------------------------------------------------------
# Fleet Power Configuration
# -----------------------------------------------------------------------------
# Total rated power of the fleet in kW (auto-calculated if not set)
# RATED_POWER_KW=500.0

# Minimum power threshold before considering fleet as standby (kW)
MIN_POWER_THRESHOLD_KW=1.0

# Power ramp rate - max kW change per second (for gradual power changes)
POWER_RAMP_RATE_KW_PER_SEC=50.0
